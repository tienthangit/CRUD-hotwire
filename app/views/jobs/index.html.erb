<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Jobs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Jobs</h1>
  </div>

  <%= turbo_frame_tag "new_job", src: new_job_path, target: "_top", class:"rounded-lg p-3 text-black inline-block font-medium text-center" %>

  <div id="jobs" class="min-w-full">
    <% @jobs.each do |job| %>
      <%= render job %>
    <% end %>
  </div>

</div>
